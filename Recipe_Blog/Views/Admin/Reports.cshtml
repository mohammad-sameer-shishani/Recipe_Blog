<script>
    $(document).ready(function () {
        $('#example').DataTable({
            dom: 'Bfrtip',
            order: [[3, 'desc']],
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>
