@using Recipe_Blog.Models;
@model IEnumerable<Login>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // User u = ViewBag.currentAdmin;
    // var userCount = ViewBag.userCount;
    // var chefCount = ViewBag.chefCount;
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Registered Chefs</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Email</th>
                            <th scope="col">Recipes count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 1;
                            @foreach (var item in Model )
                            {
                                
                               
                                <tr>
                                   <th scope="row">@i</th>
                                    <td>@item.User.Firstname</td>
                                    <td>@item.User.Lastname</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@item.User.Recipes.Count()</td>
                                    <td>
                                        <a asp-action="ChefDetails" asp-route-id="@item.User.Id">View</a>
                                </td>
                                </tr>
                                    
                                i++;
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>