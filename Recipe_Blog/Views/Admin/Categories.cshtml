@model IEnumerable<Recipe_Blog.Models.Category>

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mx-5">Categories</h2>

<p>
    <a asp-action="CreateCategory" class="btn btn-primary m-5">Add Category</a>
</p>
<table class="mx-5 table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Recipes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.Recipes.Count()
            </td>
            <td>
                    <a class="btn btn-secondary" asp-action="EditCategory" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-primary" asp-action="CategoryDetails" asp-route-id="@item.Id">Details</a> 
                    <a class="btn btn-danger" asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
