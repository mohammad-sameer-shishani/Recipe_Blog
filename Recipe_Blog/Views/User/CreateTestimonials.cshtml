@model Recipe_Blog.Models.Testimonial

@{
    ViewData["Title"] = "CreateTestimonials";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var userid = ViewBag.UserId;
}

<div class="section-title">
    <h2>Create Testimonials</h2>
</div>

<div class="row mx-5">
    <div class="col-md-4 ">
        <form asp-action="CreateTestimonials">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
         
                <input asp-for="UserId" class ="form-control d-none" value="@userid"/>
                
            <div class="form-group">
                <input type="submit" value="Create" class="btn site-btn" />
            </div>
        </form>
    </div>
</div>

