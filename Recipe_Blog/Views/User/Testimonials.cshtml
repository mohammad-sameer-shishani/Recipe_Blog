@model IEnumerable<Testimonial>

@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row justify-content-center"><h2>Testimonials</h2></div>

    <div class="row justify-content-between m-5">
@foreach (var item in Model) {
    
        <div class="card">
            <div class="card-header">
                Testimonial
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>@item.Content .</p>
                    <footer class="blockquote-footer">@item.User.Firstname @item.User.Lastname</footer>
                </blockquote>
            </div>
        </div>

}
    </div>




<p>
    <a class="btn btn-secondary m-5" asp-action="Create">Add Testimonial</a>
</p>