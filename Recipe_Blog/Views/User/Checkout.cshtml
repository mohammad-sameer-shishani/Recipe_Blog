@model Purchase

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var myid = ViewBag.currentUser;
}

<h2 class="mx-5">Checkout</h2>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="~/User/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">

        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form asp-action="CreateRequest" asp-controller="Request" method="post">
                
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="RecipeId" />


                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <input class="d-none" type="number" name="userId" value="myid">
                           @*  <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Fist Name<span>*</span></p>
                                    <input asp-for="User.Firstname" type="text">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name<span>*</span></p>
                                    <input asp-for="User.Lastname" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input placeholder="07..." type="text">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input placeholder="name@example.com" type="email">
                                </div>
                            </div>
                        </div> *@
                        <div class="checkout__input">
                            <p>Card Number<span>*</span></p>
                            <input asp-for="Cardnumber" maxlength="16" placeholder="xxxx xxxx xxxx xxxx">
                        </div>
                        <div class="checkout__input">
                            <p>CVC<span>*</span></p>
                            <input type="password" placeholder="xxx" class="checkout__input__add" maxlength="3">
                        </div>
                        <div class="checkout__input">
                            <p>Exp date<span>*</span></p>
                            <input type="number" placeholder="dd/mm" maxlength="4">
                        </div>
                       
                        
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order justify-content-center">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Recipe <span>Total</span></div>
                            <ul>
                                <li>@* @Model.Name *@ <span>$@* @Model.Price *@</span></li>
                                <li>Tax <span>+16%</span></li>
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>$@* @Model.Price *@</span></div>
                            <div class="checkout__order__total">Total <span>$@* @((Model.Price*16/100)+Model.Price) *@</span></div>
                         
                            <div class="row justify-content-center"> <a @* asp-action="CreateRequest" asp-controller="Request" *@ type="submit" class="site-btn btn col">PLACE ORDER</a></div>
                           
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->