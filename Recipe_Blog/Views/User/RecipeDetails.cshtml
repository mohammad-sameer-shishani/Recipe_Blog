@model Recipe

@{
    ViewData["Title"] = "RecipeDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="section-title">
    <h2>@Model.Name Details</h2>
</div>

   <div class="m-5 justify-content-center">
    <div class="card mb-3 bg bg-light shadow col" style="max-width: 500px;">
            <div class="row g-0">
                <div class="col-md-12">
                <img src="/User/img/@Model.Imgpath" class=" rounded-5" alt="">
                </div>
                <div class="col-md-12">
                    <div class="card-body">
                    <h3 class="card-title"><strong>Recipe :</strong> @Model.Name </h3>
                    <h4 class="card-title"><strong>By : </strong>@Model.User.Firstname</h4>
                    <p class="card-text"><h5 class=""><strong>Description: </strong></h5> @Model.Description </p>
                        <p class="card-text"><small class="text-body-secondary">Posted At : @Model.Creationdate</small></p>
                    </div>
            <div class="row justify-content-end align-items-end">
                    <a asp-action="Index" class="col-6 justify-content-end">
                        <h5 class="col-10 shadow m-3 btn btn-outline-secondary">Go Home</h5>
                        </a>
                    <a asp-action="checkout" asp-controller="User" asp-route-Id="@Model.Id" class="col-6 justify-content-end">
                        <h5 class="col-10 shadow m-3 btn btn-primary">Buy Now: $@Model.Price</h5>
                        </a>
                </div>
            </div>
            </div>
        </div>

</div>

