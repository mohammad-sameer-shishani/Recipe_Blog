@model UserViewModel
@{
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card card-authentication1 mx-auto my-4">
	<div class="card-body">
		<div class="card-content p-2">
			<div class="text-center">
				<img src="~/admin/images/logo-icon.png" alt="logo icon">
			</div>
			<div class="card-title text-uppercase text-center py-3">REGISTER</div>
			<form asp-action="Register" method="POST">
				<div class="form-group">
					<label asp-for="Birthdate" class="sr-only"></label>
					<div class="position-relative has-icon-right">
						<input type="date" asp-for="Birthdate" class="form-control input-shadow" placeholder="Enter Your Birth Date">
						
					</div>
					<span asp-validation-for="Birthdate" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Gender" class="sr-only"></label>
					<div class="position-relative has-icon-right">
						<input type="text" asp-for="Gender" class="form-control input-shadow" placeholder="Enter Your Gender">
						<div class="form-control-position">
							<i class="icon-user"></i>
						</div>
					</div>
					<span asp-validation-for="Gender" class="text-danger"></span>
				</div>
				

				<button type="submit" class="btn btn-light btn-block waves-effect waves-light">REGISTER</button>
			

			</form>
		</div>
	</div>
	<div class="card-footer text-center py-3">
		<p class="text-warning mb-0">Complete later? <a asp-controller="Home" asp-action="Index" > Skip</a></p>
	</div>
</div>
