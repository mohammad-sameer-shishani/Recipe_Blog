@model Recipe_Blog.Models.Recipe

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ChefLayout.cshtml";
}

<h1>Create Recipe</h1>

    <div class="row m-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-4 ">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Recipe Name " />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Recipe Price $" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" ></select>
            </div>
            <div class="form-group col-12 mb-4">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description"  rows="3" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-12 justify-content-center align-content-center">
                <input type="submit" value="Add To My Recipes" class="justify-content-center align-items-center col-9 col-lg-4 btn btn-primary rounded" />
            </div>
        </div>

        
        </form>
    </div>




